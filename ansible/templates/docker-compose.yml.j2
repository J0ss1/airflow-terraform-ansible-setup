version: '3'
services:
  airflow:
    image: apache/airflow:2.7.1
    user: "${AIRFLOW_UID:-{{ airflow_user_id }}}:${AIRFLOW_GID:-{{ airflow_group_id }}}"
    environment:
      - AIRFLOW__CORE__EXECUTOR=LocalExecutor
      - AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:////opt/airflow/airflow.db
      - AIRFLOW__CORE__LOAD_EXAMPLES=false
      - AIRFLOW_HOME=/opt/airflow
    volumes:
      - "{{ airflow_home }}/dags:/opt/airflow/dags"
      - "{{ airflow_home }}/logs:/opt/airflow/logs"
      - "{{ airflow_home }}/plugins:/opt/airflow/plugins"
      - "{{ airflow_home }}/airflow.db:/opt/airflow/airflow.db"
      - ./config:/opt/airflow/config
    ports:
      - "8080:8080"
    command: >
      bash -c "
      airflow db init &&
      airflow users create \
        --username admin \
        --firstname admin \
        --lastname admin \
        --role Admin \
        --email admin@example.com \
        --password admin &&
      airflow standalone"